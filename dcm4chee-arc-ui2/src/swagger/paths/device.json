{
  "get": {
    "tags": [
      "CONFIG-RS"
    ],
    "summary": "Get Device",
    "operationId": "getDevice",
    "parameters": [
      {
        "$ref": "../parameters.json#/devicePathParam"
      }
    ],
    "responses": {
      "200": {
        "description": "Device",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../assets/schema/device.schema.json"
            }
          }
        }
      },
      "404": {
        "description": "Device configuration not found"
      },
      "500": {
        "description": "Internal Server Error."
      }
    }
  },
  "post": {
    "tags": [
      "CONFIG-RS"
    ],
    "summary": "Create Device",
    "operationId": "createDevice",
    "parameters": [
      {
        "$ref": "../parameters.json#/devicePathParam"
      },
      {
        "$ref": "../parameters.json#/register"
      }
    ],
    "requestBody": {
      "description": "new device",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../assets/schema/device.schema.json"
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "successful operation"
      },
      "400": {
        "description": "Device Name in request body didn't match with Device Name in URL or JSON request body was not well formed"
      },
      "404": {
        "description": "Referenced devices/configuration not found"
      },
      "409": {
        "description": "Device, Application Entity, HL7 Application or Web Application already exists"
      },
      "500": {
        "description": "Internal Server Error."
      }
    }
  },
  "put": {
    "tags": [
      "CONFIG-RS"
    ],
    "summary": "Update Device",
    "operationId": "updateDevice",
    "parameters": [
      {
        "$ref": "../parameters.json#/devicePathParam"
      },
      {
        "$ref": "../parameters.json#/register"
      }
    ],
    "requestBody": {
      "description": "updated device",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../assets/schema/device.schema.json"
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "successful operation"
      },
      "400": {
        "description": "Device Name in request body didn't match with Device Name in URL or JSON request body was not well formed"
      },
      "404": {
        "description": "Device not found or referenced device/configuration not found"
      },
      "409": {
        "description": "Device, Application Entity, HL7 Application or Web Application already exists"
      },
      "500": {
        "description": "Internal Server Error."
      }
    }
  },
  "delete": {
    "tags": [
      "CONFIG-RS"
    ],
    "summary": "Delete Device",
    "operationId": "deleteDevice",
    "parameters": [
      {
        "$ref": "../parameters.json#/devicePathParam"
      },
      {
        "$ref": "../parameters.json#/register"
      }
    ],
    "responses": {
      "204": {
        "description": "successful operation"
      },
      "404": {
        "description": "Device not found"
      },
      "500": {
        "description": "Internal Server Error."
      }
    }
  }
}