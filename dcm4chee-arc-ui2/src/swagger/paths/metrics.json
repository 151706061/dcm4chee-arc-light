{
  "-": {
    "get": {
      "tags": [
        "MONITOR-RS"
      ],
      "summary": "List Metrics Descriptors",
      "operationId": "listMetricsDescriptors",
      "parameters": [
      ],
      "responses": {
        "200": {
          "description": "Metrics Descriptors",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../assets/schema/metrics.schema.json"
              }
            }
          }
        },
        "500": {
          "description": "Internal Server Error"
        }
      }
    }
  },
  "metric": {
    "get": {
      "tags": [
        "MONITOR-RS"
      ],
      "summary": "Get Metrics",
      "operationId": "getMetrics",
      "parameters": [
        {
          "name": "name",
          "in": "path",
          "description": "Metrics Name",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "bin",
          "in": "query",
          "description": "data bin size in minutes",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          }
        },
        {
          "name": "limit",
          "in": "query",
          "description": "maximal number of returned data entries",
          "schema": {
            "type": "integer",
            "minimum": 1
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Metrics",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/metrics.schema.json"
              }
            }
          }
        },
        "400": {
          "description": "query parameter out of range"
        },
        "404": {
          "description": "no metrics with given name found"
        },
        "500": {
          "description": "Internal Server Error"
        }
      }
    }
  }
}